{% extends "./base.nunjucks" %} {% block body %}



<div class="container banner-wrapper">

    <div class="banner">
        <div class="row">
            <div class="col-xs-12 hidden-sm hidden-md hidden-lg">
                <img class="img-responsive" src="/img/bobee-banner.png" />
                <!--Mobile-->
            </div>
            <div class="hidden-xs col-lg-12">
                <img class="img-responsive" src="/img/bobee-banner.png" />
                <!--Large-->
            </div>
        </div>
    </div>

</div>

<div class="container wrapper">
    <div class="game-rule">
        <div class="row">
            <div class="col-sm-2 col-sm-push-1">
                <div class="row">
                    <div class="rule-text-div">
                        <div class="col-sm-12 rule-text">遊戲</div>
                        <div class="col-sm-12 rule-text">規則</div>
                    </div>
                </div>
            </div>

            <div class="col-sm-8 col-sm-push-1">
                <h1 style="color:white; text-align:center; font-size:1em;">(步驟圖 待設計)</h1>
            </div>

        </div>
    </div>
</div>

<div class="container wrapper">
    <div class="ten-chart">
        <div class="row">
            <div class="col-sm-2 col-sm-push-1">
                <div class="row">
                    <div class="rule-text-div">
                        <div class="col-sm-12 rule-text">連續</div>
                        <div class="col-sm-12 rule-text">聖杯</div>
                    </div>
                </div>
            </div>

            <div class="col-sm-8 col-sm-push-1">
                <h1 style="color:white; text-align:center; font-size:1em;">前10名排行榜（待完成）</h1>
            </div>
        </div>

        <div class="row">
            <div class="col-sm-12">

                <div style="width:100px;margin:0 auto; background-color:orange; text-align:center;">
                    <a href="./chart">總排行榜頁面</a>
                </div>

            </div>
        </div>
    </div>
</div>

<div class="container wrapper">
    <div class="game-stat-div">
        <div class="row">
            <div class="col-sm-4">
                歷史最高連續擲杯：<span class="stat-history-top-number"></span>
            </div>
            <div class="col-sm-4">
                今日剩下幾次機會：<span class="stat-oppotunity-number"></span>
            </div>
            <div class="col-sm-4">
                目前連續聖杯數：<span class="stat-current-combo-number"></span>
            </div>
        </div>
    </div>
    <div class="game">
        <div class="row">
            <div class="col-xs-12">
                <span style="color:white; font-size:2em;" id="status"></span>
                <div class="gif-wrapper">
                    {% if isMobileOrTablet %}
                    <img class="img-responsive img-game-init" src="/img/game-init-mobile.png" alt=""> {% else %}
                    <img class="img-responsive img-game-init" src="/img/game-init.png" alt=""> {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container wrapper">
    <div class="row">
        <div class="col-sm-12">
            <div class="fb-login-row">
                <div class="fb-login-block">
                    <div onlogin="statusChangeCallback" class="fb-login-button" data-max-rows="1" data-size="large" data-button-type="login_with" data-show-faces="false" data-auto-logout-link="true" data-use-continue-as="true"></div>
                </div>
            </div>
            <div class="fb-status" id="status"></div>
        </div>
    </div>
</div>


